<h2>Verify OTP</h2>

<%= form_with url: verify_otp_profile_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :otp_code, "Enter the OTP code" %>
    <%= f.text_field :otp_code, class: "form-control" %>
  </div>
  <%= f.submit "Verify", class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", profile_path, class: "btn btn-secondary" %>
