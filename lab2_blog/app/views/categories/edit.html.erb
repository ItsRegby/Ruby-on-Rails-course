<div class="card">
  <div class="card-body">
    <h1 class="card-title"><%= @category.new_record? ? "New Category" : "Edit Category" %></h1>
    <%= form_with(model: @category, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div>
        <%= form.submit @category.new_record? ? "Create Category" : "Update Category", class: "btn btn-primary" %>
        <%= link_to 'Back', categories_path, class: "btn btn-secondary", data: { turbo: true } %>
      </div>
    <% end %>
  </div>
</div>